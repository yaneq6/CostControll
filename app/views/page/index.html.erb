
<div id="user_header">
  <% if current_user %>
      <h1>Index</h1>
      Hello <%=current_user.first_name %>. Your login is <%= current_user.email %>.<br>
      <%= link_to "Log Out", logout_path %>
      <br><br>Ready for shopping?
  <% else %>
      <h1>Logging</h1>
      <%= link_to "Sign Up", signup_path %> or
      <%= link_to "Log In", login_path %>
  <% end %>
</div>
<% flash.each do |key, value| %>
    <%= content_tag(:div, class: "alert alert-#{key}") do %>
        <p><%= value %></p>
    <% end %>
<% end %>

